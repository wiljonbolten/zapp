{
    "name": "wiljonbolten/zapp",
    "description": "Maintenance tool created to media on my homeserver.",
    "keywords": [
        "zapp",
        "media",
        "plex",
        "movies",
        "series"
    ],
    "homepage": "https://github.com/wiljonbolten/zapp",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/wiljonbolten/zapp/issues",
        "source": "https://github.com/wiljonbolten/zapp"
    },
    "authors": [
        {
            "name": "Wiljon Bolten",
            "email": "wiljonbolten@gmail.com",
            "homepage": "https://github.com/wiljonbolten",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/database": "^11.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "intonate/tinker-zero": "^1.2",
        "laravel/pint": "^1.18.3",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.7.1",
        "laravel-zero/framework": "^11.36.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": [
        "builds/zapp"
    ]
}
